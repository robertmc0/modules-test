        "mode": "Incremental",
        "parameters": {
          "nicId": {
            "value": "[reference(resourceId('Microsoft.Network/privateEndpoints', variables('privateEndpointName'))).networkInterfaces[0].id]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
